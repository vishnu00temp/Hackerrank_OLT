vector<int> stones(int n, int a, int b) {
    vector<int> result;
    if (a == b) {
        result.push_back((n - 1) * a);
        return result;
    }
    int min_val = (n - 1) * min(a, b);
    int diff = std::abs(a - b);
    for (int i = 0; i < n; ++i) {
        result.push_back(min_val + (i * diff));
    }
    return result;
}
